

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/result"
                android:gravity="center_vertical|center_horizontal|right"
                android:textSize="40sp"
                android:padding="20dp"
                android:background="#B9BB9E" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="1" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="AC"
                    android:id="@+id/buttonClear"
                    android:layout_weight="1"
                    android:width="1dp"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:id="@+id/buttonDiv"
                    android:layout_weight="1"
                    android:width="1dp"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="x"
                    android:id="@+id/buttonMul"
                    android:layout_weight="1"
                    android:width="1dp"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="&lt;&lt;"
                    android:id="@+id/buttonOxo"
                    android:width="1dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_weight="1" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:width="1dp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/buttonLess"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/buttonPlus"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:text="3"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="#252D25" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/buttonP"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button11"
                    android:layout_weight="1"
                    android:background="#898888"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/buttonIgual"
                    android:layout_weight="1"
                    android:background="#00FF00"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

